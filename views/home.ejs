 crossorigin="anonymous">

<link rel="stylesheet" href="<%= assetPath('css/home.css') %>">
<link rel="stylesheet" href="/css/posts.css">


<div id="home-container" class="container-fluid">
    <div class="empty">

    </div>

    <div class="row posts">
        <div class="col mx-3">

            <!-- - \\\\\\\Post-->
            <% if(locals.user){ %>
            <form action="/posts/create" id="new-post-form" method="POST">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active">
                                    Make a publication
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <textarea class="form-control" name="content" cols="55" rows="3"
                                placeholder="Whats on your mind.. Type Here !!" required></textarea>
                        </div>
                        <div class="btn-toolbar justify-content-between">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary">share</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <% } %>
            <!-- Post ///// -->
            <div id="post-list-container">
                
                    <% for(post of posts){ %>

                    <%- include('posts') %>

                    <% } %>

            </div>
        </div>
    </div>


    <section id="user-friends">

        <div class="friends">
            <h4>FRIENDS</h4>
            <% if(locals.user){ %>
            <% for(let friends of friendships){ %>
            <p>
                <a href="/users/profile/<%= friends.id %>"> <%= friends.name %> </a>
            </p>
            <% } %>
            <% } %>
        </div>

        <div class="users">
            <h4>ALL USERS</h4>
            <% for(u of all_users){%>
            <p>
                <a href="/users/profile/<%= u.id %>"> <%= u.name %></a>
            </p>
            <% } %>
        </div>
    </section>

    <%- include('chat_box') %>

</div>
<script src="<%= assetPath('js/home_posts_comments.js') %>"></script>
<script src="<%= assetPath('js/home_posts.js') %>"></script>


