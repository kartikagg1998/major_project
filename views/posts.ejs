<li id="post-<%= post._id %>">

    <div class="card post">

        <!-- head for the post -->
        <div class="card-header">
            <% if (locals.user){ %>
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-2">
                        <% if(post.user.avatar){ %>
                        <img class="rounded-circle" width="45" src="<%= user.avatar %>" alt="">
                        <% } else{ %>
                        <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                        <% } %>
                    </div>
                    <div class="ml-2">
                        <div class="h5 m-0"><%= post.user.name %></div>
                        <div class="h7 text-muted"><%= post.user.email %></div>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                        <div class="h6 dropdown-header">Configuration</div>
                        <a class="dropdown-item" href="#">Save</a>
                        <% if(locals.user.id == post.user.id){ %>
                        <a class="delete-post-button dropdown-item" href="/posts/destroy/<%= post.id %>"> Delete </a>
                        <% } %>
                        <a class="dropdown-item" href="#">Report</a>
                    </div>
                </div>
            </div>
        </div>

<!-- post body -->
        <div class="card-body card-post">
            <small>
                <div class="text-muted h7 mb-2"> <i class="far fa-clock"></i> &nbsp; <span  id="created"> <%= post.createdAt %> </span> </div>
            </small>

            <p class="card-text">
                <%= post.content %>
            </p>


            <!-- ************* changing this -->
         
                <small class="text-muted" id="likes-count" data-likes="<%= post.likes.length %>">
                    <% if(post.likes.lenght > 0){ %> 
                    <img src="https://i.pinimg.com/originals/39/44/6c/39446caa52f53369b92bc97253d2b2f1.png"
                  class="rounded-circle" width="30" >
                <%= post.likes.length %>
                <% } %>
                </small>
        </div>

<!-- post footer -->
        <div class="card-footer">

            <% console.log(post.likes.includes(locals.user)) %>

            <% if(post.likes.includes(locals.user)){ %>
            <a class="toggle-like-button card-link" id="remove-click"
                href="/likes/toggle/?id=<%=post._id%>&type=Post"> <i class="fas fa-thumbs-up"></i> Like </a>

            <% } else{ %>
            <a class="toggle-like-button card-link" id="put-like"
                href="/likes/toggle/?id=<%=post._id%>&type=Post"> <i class="far fa-thumbs-up"></i> Like </a>
            <% } %>

            <a class="card-link" data-toggle="collapse" href="#comment-<%= post._id %>" role="button"
                aria-expanded="false" aria-controls="collapseExample"><i class="far fa-comment"></i> Comment</a>
            <div class="collapse mt-2" id="comment-<%= post._id %>">
                <div class="card card-body">

<!-- comment functionality -->
                    <div class="post-comments">
                        <form id="post-<%= post._id %>-comments-form" action="/comments/create" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" name="content" placeholder="Add a comment..."
                                    required>
                            </div>
                            <input type="hidden" name="post" value="<%= post._id %>">

                        </form>

                        <div class="post-comments-list">
                            <ul id="post-comments-<%= post._id %>">
                                <% for(comment of post.comments){ %>

                                <%- include('_comments') %>

                                <% }%>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- <%= console.log(post.likes) %> -->

</li>

<script type="text/javascript">

var splits = document.getElementById('created');
var date = splits.textContent;
var slicestring = date.slice(4,16);
splits.innerHTML = slicestring

</script>


